{
	"actions": [
		{
			"@name": "bundles-required-folder",
			"@displayName": "Synching plugin required folders...",
			"@action": "collate",
			"@onlyOnSwitches": [
                "build"
            ],
            "@when": "preFinish",
			"on": "required",
			"root": "src",
			"src": "",
			"globs": [
				"**/extensions/**/required/**",
				"**/components/**/required/**",
				"**/theme/**/required/**",
				"**/menu/**/required/**"		
			],
			"diffGlobs": [
				"!{{dest}}/adapt/**",
				"!{{dest}}/adapt",
				"!{{dest}}/assets/**",
				"!{{dest}}/assets",
				"!{{dest}}/course/**",
				"!{{dest}}/course",
				"!{{dest}}/libraries/**",
				"!{{dest}}/libraries",
				"**"
			],
			"dest": "{{outputDest}}/{{course}}"
		},
		{
			"@name": "bundles-assets-folder",
			"@displayName": "Synching plugin asset folders...",
			"@action": "collate",
			"@onlyOnSwitches": [
                "build"
            ],
            "@when": "postStart",
			"on": "assets",
			"root": "src",
			"src": "",
			"globs": [
				"**/extensions/**/assets/**",
				"**/components/**/assets/**",
				"**/menu/**/assets/**"		
			],
			"diffGlobs": [
				"**"
			],
			"dest": "{{outputDest}}/{{course}}/assets"
		},
		{
			"@name": "bundles-fonts-folder",
			"@displayName": "Synching font folders...",
			"@action": "collate",
			"@onlyOnSwitches": [
                "build"
            ],
            "@when": "postStart",
			"on": "fonts",
			"root": "src",
			"src": "",
			"globs": [
				"**/extensions/**/fonts/**",
				"**/components/**/fonts/**",
				"**/menu/**/fonts/**",
				"**/theme/**/fonts/**"			
			],
			"diffGlobs": [
				"**"
			],
			"dest": "{{outputDest}}/{{course}}/adapt/css/fonts"
		},
		{
			"@name": "theme-assets-folder",
			"@displayName": "Synching theme asset folders...",
			"@action": "collate",
			"@onlyOnSwitches": [
                "build"
            ],
            "@when": "postStart",
			"on": "assets",
			"root": "src",
			"src": "",
			"globs": [
				"**/theme/**/assets/**"	
			],
			"diffGlobs": [
				"**"
			],
			"dest": "{{outputDest}}/{{course}}/adapt/css/assets"
		}
	]
}
